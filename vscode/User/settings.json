{
    "editor.fontFamily": "Fira Code,Droid Sans Mono,DroidSansMono Nerd Font,Cascadia Code, Monaco,Courier New,monospace",
    "editor.fontWeight": "400",
    "editor.lineHeight": 24.65,
    "editor.letterSpacing": 0.5,
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "top",
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.mouseWheelScrollSensitivity": 1,
    "editor.wordWrap": "on",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.formatOnPaste": false,
    // "editor.insertSpaces": false,
    "editor.glyphMargin": true,
    "editor.rulers": [80],
    "editor.accessibilitySupport": "off",

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "off",
    "files.hotExit": "off",
    "files.defaultLanguage": "markdown",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/.sass-cache": true,
        "**/.svn": true,
        "**/build": true,
        "**/CVS": true,
        "**/node_modules": true
    },

    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "typescript.check.npmIsInstalled": false,
    "typescript.validate.enable": false,

    "javascript.validate.enable": false,
    "javascript.format.enable": false,

    "[php]":{
        "editor.formatOnSave": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },

    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html"
    },
    "emmet.triggerExpansionOnTab": true,


    "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
    "window.zoomLevel": 0,

    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.fontAliasing": "auto",
    "workbench.tree.indent": 20,


    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.fontWeightBold": "500",
    "terminal.integrated.cursorStyle": "line",


    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.avatars": false,
    "gitlens.views.repositories.avatars": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.blame.avatars": false,

    "html.format.wrapLineLength": 80,

    "intelephense.stubs": [
