# Git credentials
# Change following credentials to prevent from accidentally committing under my name
GIT_AUTHOR_NAME="YourName"
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
git config --global user.name "$GIT_AUTHOR_NAME"
GIT_AUTHOR_EMAIL="user@email.com"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"
git config --global user.email "$GIT_AUTHOR_EMAIL"

# Quick SSH connect ---------------
function connect() {
    # Define connection options with server details
    declare -A servers=(
        ["server1"]="user@ip:522"
        ["server2"]="user@ip:522"
    )

    # Print available options
    echo "Available connections:"
    PS3='Select the connection (or enter q to quit): '

    # Create options array from server names
    options=(${!servers[@]} "Quit")

    select opt in "${options[@]}"
    do
        # Handle quit option
        if [[ $REPLY == "q" || $opt == "Quit" ]]; then
            break
        fi

        # Validate selection
        if [[ -n $opt && ${servers[$opt]+_} ]]; then
            # Extract server details and connect
            IFS=':' read -r server port <<< "${servers[$opt]}"
            ssh "$server" -p "$port"
            break
        else
            echo "Invalid option '$REPLY'. Please try again or enter 'q' to quit."
        fi
    done
}

# Project Directories --------------------------------------------------------

PROJECTS_DIR=~/projects

# custom directories --------------
alias pstorms="cd $PROJECTS_DIR/pstorm"
alias herds="cd $PROJECTS_DIR/herds"
alias ddevs="cd $PROJECTS_DIR/ddevs"
alias wp-plugins="cd $PROJECTS_DIR/wp-development/plugins"
alias wp-themes="cd $PROJECTS_DIR/wp-development/themes"
alias clones="cd $PROJECTS_DIR/clones"
alias crafts="cd $PROJECTS_DIR/crafts"
alias craft-plugins="cd $PROJECTS_DIR/crafts/plugins"


function pro() {
    if [ -f "${PROJECTS_DIR}/workspace/$1.code-workspace" ]; then
        open "${PROJECTS_DIR}/workspace/$1.code-workspace"
        echo "Switched to [${PWD}]"
    fi

    # Defining project directories to be checked
    local project_dirs=(
        "pstorm"
        "herds"
        "ddev"
        "wp-development/plugins"
        "wp-development/themes"
        "clones"
        "crafts"
        "crafts/plugins"
    )

    # Loop through each project directory
    for dir in "${project_dirs[@]}"; do
        local project_path="${PROJECTS_DIR}/${dir}/$1"
        if [ -d "$project_path" ]; then
            cd "$project_path"
            echo "Switched to [${PWD}]"
            return 0
        fi
    done
}
